<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLightColor"
    android:orientation="vertical"
    tools:context=".exercises.AteFragment2">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ateImage2"
            android:layout_width="550dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:src="@drawable/ate_3"
            android:layout_gravity="center" />

        <!-- ate_3
        <Button
            android:id="@+id/mathsbButtonPista"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Pista"
            android:layout_gravity="end"
            android:layout_marginRight="100dp"
            android:textSize="25sp"/>
-->
        <TextView
            android:id="@+id/textView2Ate"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/ateImage2"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text=""
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/editText2Ate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toEndOf="@+id/ateImage2"
            android:layout_below="@+id/textView2Ate"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Escribe tu respuesta"
            android:inputType="number"
            android:textSize="40sp"
            android:textColor="@color/primaryTextColor"/>

        <Button
            android:id="@+id/btn2Ate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/editText2Ate"
            android:layout_toEndOf="@+id/ateImage2"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/secondaryDarkColor"
            android:text="Enviar"
            android:textSize="30sp"
            android:textColor="@color/primaryTextColor"/>

    </RelativeLayout>

</LinearLayout>