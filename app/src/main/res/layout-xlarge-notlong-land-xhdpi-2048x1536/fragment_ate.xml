<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLightColor"
    android:orientation="vertical"
    tools:context=".exercises.AteFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ateImage"
            android:layout_width="575dp"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:src="@drawable/ate_1"
            android:layout_gravity="center" />

        <!-- ate_1
        <Button
            android:id="@+id/mathsbButtonPista"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Pista"
            android:layout_gravity="end"
            android:layout_marginRight="100dp"
            android:textSize="25sp"/>
-->
        <TextView
            android:id="@+id/textView1Ate"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toEndOf="@+id/ateImage"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text=""
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/editText1Ate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toEndOf="@+id/ateImage"
            android:layout_below="@+id/textView1Ate"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Escribe tu respuesta"
            android:inputType="number"
            android:textColor="@color/primaryTextColor"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn1Ate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toEndOf="@+id/ateImage"
            android:layout_below="@+id/editText1Ate"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/secondaryDarkColor"
            android:text="Enviar"
            android:textColor="@color/primaryTextColor"
            android:textSize="30sp" />

    </RelativeLayout>

</LinearLayout>