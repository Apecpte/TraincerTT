<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLightColor"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".exercises.LanguFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#20000000"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressLangu1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginTop="5dp"
            android:progressTint="@color/secondaryDarkColor"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/noQuestionLangu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_alignParentLeft="true"
                android:text="Pregunta No : "/>
            <TextView
                android:id="@+id/scoreLangu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_alignParentRight="true"
                android:text="PuntuaciÃ³n: "/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewLangu1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text=""
        android:textColor="@color/primaryTextColor"
        android:textSize="50sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/answerBtnLangu1"
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/secondaryDarkColor"
            android:text=""
            android:textColor="@color/primaryTextColor"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/answerBtnLangu2"
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/secondaryDarkColor"
            android:text=""
            android:textColor="@color/primaryTextColor"
            android:textSize="30sp"/>

    </LinearLayout>

</LinearLayout>