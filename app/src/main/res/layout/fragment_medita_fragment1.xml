<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryLightColor"
    tools:context=".meditation.MeditaFragment1">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Relajación progresiva de Jacobson"
        android:textColor="@color/colorBlack"
        android:textSize="70sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Posición Inicial"
            android:textColor="@color/colorBlack"
            android:textSize="50sp" />

        <ImageButton
            android:id="@+id/imBtnMeditaAudioPosIni"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@color/primaryLightColor"
            android:src="@mipmap/volume_relax"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Fase 1"
        android:textColor="@color/colorAccent"
        android:textSize="60sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Realice los ejercicios de relajación de cara, cuello y hombros con el siguiente orden: \n(repita cada ejercicio tres veces con intervalos de descanso de unos segundos):"
        android:textColor="@color/colorBlack"
        android:textSize="32sp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Frente"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ojos"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nariz"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Boca"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Lengua"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mandíbula"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Labios"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_frente"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_ojo"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_nariz"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_boca"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_lengua"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_mandibula"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_labios"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imBtnMedita1AudioFrente"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:src="@mipmap/volume_relax"/>
            <ImageButton
                android:id="@+id/imBtnMedita1AudioOjos"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/primaryLightColor"
                android:src="@mipmap/volume_relax"/>
            <ImageButton
                android:id="@+id/imBtnMedita1Audionariz"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/primaryLightColor"
                android:src="@mipmap/volume_relax"/>
            <ImageButton
                android:id="@+id/imBtnMedita1AudioBoca"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/primaryLightColor"
                android:src="@mipmap/volume_relax"/>
            <ImageButton
                android:id="@+id/imBtnMedita1AudioLengua"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/primaryLightColor"
                android:src="@mipmap/volume_relax"/>
            <ImageButton
                android:id="@+id/imBtnMedita1AudioMandi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/primaryLightColor"
                android:src="@mipmap/volume_relax"/>
            <ImageButton
                android:id="@+id/imBtnMedita1AudioLabios"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/primaryLightColor"
                android:src="@mipmap/volume_relax"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonGoOutMedita1"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginRight="500dp"
            android:layout_marginTop="4dp"
            android:padding="25dp"
            android:backgroundTint="@color/secondaryDarkColor"
            android:text="@string/btn_goOut"
            android:textSize="30dp"
            android:textColor="@color/primaryTextColor"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonNextMedita1"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:padding="25dp"
            android:backgroundTint="@color/secondaryDarkColor"
            android:text="@string/btn_next"
            android:textSize="30sp"
            android:textColor="@color/primaryTextColor"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>