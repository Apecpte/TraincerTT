<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".meditation.MeditaFragment2">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Relajación progresiva de Jacobson"
        android:textColor="@color/colorBlack"
        android:textSize="70sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text=""
            android:textColor="@color/colorBlack"
            android:textSize="50sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Fase 1"
        android:textColor="@color/colorPrimary"
        android:textSize="60sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Los siguientes ejercicios se hacen mejor sentado sobre una silla:"
        android:textColor="@color/colorBlack"
        android:textSize="32sp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Toráx"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Espalda"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Estómago"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cintura"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_torax"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_espalda"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_estomago"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_cintura"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imBtnMedita2AudioTorax"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/medi_audio"/>
            <ImageButton
                android:id="@+id/imBtnMedita2AudioEspalda"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/medi_audio"/>
            <ImageButton
                android:id="@+id/imBtnMedita2AudioEsto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/medi_audio"/>
            <ImageButton
                android:id="@+id/imBtnMedita2AudioCintura"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/medi_audio"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonGoOutMedita2"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginRight="145dp"
            android:layout_marginTop="4dp"
            android:padding="25dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="@string/btn_goOut"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonBackMedita2"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="145dp"
            android:layout_marginTop="4dp"
            android:padding="25dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="ATRÁS"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonNextMedita2"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:padding="25dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="@string/btn_next"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>