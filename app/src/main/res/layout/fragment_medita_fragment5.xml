<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryLightColor"
    tools:context=".meditation.MeditaFragment5">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="Relajación progresiva de Jacobson"
        android:textColor="@color/colorBlack"
        android:textSize="70sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="50sp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:text="Fase 1"
        android:textSize="60sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="32sp" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Brazos y manos"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cuello y nuca"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hombros y cuello"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Piernas"
                android:textColor="@color/colorBlack"
                android:textSize="32sp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_brazos"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_cuello"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_hombros"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:src="@mipmap/medi_piernas"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imBtnMedita5AudioBrazos"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/primaryLightColor"
                android:src="@mipmap/volume_relax"/>
            <ImageButton
                android:id="@+id/imBtnMedita5AudioCuello"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/primaryLightColor"
                android:src="@mipmap/volume_relax"/>
            <ImageButton
                android:id="@+id/imBtnMedita5AudioHombros"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/primaryLightColor"
                android:src="@mipmap/volume_relax"/>
            <ImageButton
                android:id="@+id/imBtnMedita5AudioPiernas"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/primaryLightColor"
                android:src="@mipmap/volume_relax"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonGoOutMedita5"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginRight="145dp"
            android:layout_marginTop="4dp"
            android:padding="25dp"
            android:backgroundTint="@color/secondaryDarkColor"
            android:text="@string/btn_goOut"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonBackMedita5"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="145dp"
            android:layout_marginTop="4dp"
            android:padding="25dp"
            android:backgroundTint="@color/secondaryDarkColor"
            android:text="ATRÁS"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonNextMedita5"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4dp"
            android:padding="25dp"
            android:backgroundTint="@color/secondaryDarkColor"
            android:text="@string/btn_next"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>