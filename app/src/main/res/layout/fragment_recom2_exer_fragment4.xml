<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RecomExer.Recom2ExerFragment4">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView2Exer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Ejercicio pectorales"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/tv2E2"
        android:layout_width="780dp"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:padding="24dp"
        android:text="Colocamos los brazos en cruz \nlevantados a la altura de los hombros \ny los juntamos delante del cuerpo \n(como si abriéramos y cerráramos \nuna ventana).
        \n10 repeticiones."
        android:layout_below="@+id/textView2Exer2"
        android:layout_above="@id/button2GoOut"
        android:textColor="@color/colorBlack"
        android:textStyle="italic"
        android:textAlignment="textEnd"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageView2GifExer"
        android:layout_width="500dp"
        android:padding="24dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2Next"
        android:layout_below="@+id/textView2Exer2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/button2GoOut"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="start"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="32dp"
        android:padding="25dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_goOut"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2Back"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:padding="25dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Atrás"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2Next"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="32dp"
        android:padding="25dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_next"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>