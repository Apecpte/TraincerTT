<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RecomExer.Recom3ExerFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView3Exer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Flexión-extensión de brazo."
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/tv3E1"
        android:layout_width="780dp"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:padding="24dp"
        android:text="Con el adulto mayor tumbado o sentado, \nle pedimos que intente levantar el brazo. \nUn familiar completará el movimiento \nlentamente sin provocar dolor. \nRealizar 10 repeticiones con cada brazo."
        android:layout_below="@+id/textView3Exer1"
        android:layout_above="@id/button2GoOut"
        android:textColor="@color/colorBlack"
        android:textStyle="italic"
        android:textAlignment="textEnd"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageView3GifExer"
        android:layout_width="500dp"
        android:padding="24dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button3Next"
        android:layout_below="@+id/textView3Exer1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"/>

    <Button
        android:id="@+id/button3GoOut"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="start"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="32dp"
        android:padding="25dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_goOut"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3Next"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="32dp"
        android:padding="25dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="@string/btn_next"
        android:textSize="30sp"
        android:textStyle="bold"/>

</RelativeLayout>