<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLightColor"
    tools:context=".RecomExer.Recom3ExerFragment3">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/llFlexExtCodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3Exer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="Flexión-extensión de codo"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="70sp" />

        <ImageButton
            android:id="@+id/imBtnRecomExer3Audio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/primaryLightColor"
            android:src="@mipmap/volume_relax"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_below="@+id/llFlexExtCodo"
        android:layout_above="@id/button3GoOut">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv3E2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Con el adulto mayor acostado o sentado, un familiar colocará las manos cerca de la articulación del codo y realizará movimientos lentos de flexión y extensión sin provocar dolor.\nRealizar 10 repeticiones con cada brazo."
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:textAlignment="textEnd"
                android:textSize="31sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/imageView3GifExer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button3GoOut"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="start"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:backgroundTint="@color/secondaryDarkColor"
        android:text="@string/btn_goOut"
        android:textSize="30sp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3Back"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:backgroundTint="@color/secondaryDarkColor"
        android:text="Atrás"
        android:textSize="30sp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3Next"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:backgroundTint="@color/secondaryDarkColor"
        android:text="@string/btn_next"
        android:textSize="30sp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold" />

</RelativeLayout>