<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/food1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryLightColor"
    tools:context=".fragments.RecomFoodFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/llPezAzul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewFoodTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FoodTitle1"
            android:layout_marginRight="25dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="60sp" />

        <ImageButton
            android:id="@+id/imBtnRecomAliAudio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/primaryLightColor"
            android:src="@mipmap/volume_relax"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_below="@+id/llPezAzul"
        android:layout_above="@id/btnYT">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tVInst1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coma de preferencia pescado azul \nya que tiene mayor contenido en \nomega 3. Por ejemplo, atún, sardina, salmón, trucha, cazón, etcétera. \nMínimo 2 veces por semana."
                android:layout_below="@+id/tVSubtitle1"
                android:textColor="@color/colorBlack"
                android:textStyle="italic"
                android:textAlignment="textEnd"
                android:textSize="33sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLeftFood1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_left" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:layout_marginRight="10dp">

                <ViewFlipper
                    android:id="@+id/viewFlipperFood1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView1Food1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/bowlpez" />

                    <ImageView
                        android:id="@+id/imageView1Food2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:padding="10dp"
                        android:src="@drawable/atun"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp" />

                    <ImageView
                        android:id="@+id/imageView1Food3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:padding="10dp"
                        android:src="@drawable/salmon"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp" />

                    <ImageView
                        android:id="@+id/imageView1Food4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:padding="10dp"
                        android:src="@drawable/trucha"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp" />

                    <ImageView
                        android:id="@+id/imageView1Food5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        android:padding="10dp"
                        android:src="@drawable/sardina"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp" />

                </ViewFlipper>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnRightFood1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_right" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnYT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_above="@+id/buttonGoOut"
        android:background="@null"
        android:text="Si quieres saber más beneficios del pescado azul. Da click aquí."
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonGoOut"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="start"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:backgroundTint="@color/secondaryDarkColor"
        android:text="@string/btn_goOut"
        android:textSize="30sp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="10dp"
        android:padding="15dp"
        android:backgroundTint="@color/secondaryDarkColor"
        android:text="@string/btn_next"
        android:textSize="30sp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"/>

</RelativeLayout>