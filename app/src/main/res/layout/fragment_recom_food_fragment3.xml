<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/food1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryLightColor"
    tools:context=".fragments.RecomFoodFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textViewFoodTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FoodTitle3"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="55sp" />

    <TextView
        android:id="@+id/tVSubtitle3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewFoodTitle3"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tVInst3"
        android:layout_width="750dp"
        android:layout_height="330dp"
        android:text="Tiene efectos favorables sobre \nla glucemia, y aporta hidratos \nde carbono (HC) complejos, \nque contribuyen a regular el perfil \ncalórico de la dieta. Además, tienen \nalto contenido en compuestos \nbioactivos, fibra y proteínas."
        android:layout_below="@+id/tVSubtitle3"
        android:textColor="@color/colorBlack"
        android:textStyle="italic"
        android:textAlignment="textEnd"
        android:textSize="38sp" />

    <Button
        android:id="@+id/btnLeftFood3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_left"
        android:layout_toRightOf="@+id/tVInst3"
        android:layout_marginVertical="270dp"/>

    <ViewFlipper
        android:id="@+id/viewFlipperFood3"
        android:layout_width="400dp"
        android:layout_height="330dp"
        android:layout_below="@+id/tVSubtitle3"
        android:layout_toRightOf="@+id/btnLeftFood3">

        <ImageView
            android:id="@+id/imageView3Food1"
            android:layout_width="400dp"
            android:layout_height="330dp"
            android:padding="10dp"
            android:src="@drawable/legumbresbolsas" />

        <ImageView
            android:id="@+id/imageView3Food2"
            android:layout_width="400dp"
            android:layout_height="330dp"
            android:visibility="invisible"
            android:padding="10dp"
            android:src="@drawable/chana"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp" />

        <ImageView
            android:id="@+id/imageView3Food3"
            android:layout_width="400dp"
            android:layout_height="330dp"
            android:visibility="invisible"
            android:padding="10dp"
            android:src="@drawable/chicharo"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp" />

        <ImageView
            android:id="@+id/imageView3Food4"
            android:layout_width="400dp"
            android:layout_height="330dp"
            android:visibility="invisible"
            android:padding="10dp"
            android:src="@drawable/beansbolsas"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp" />

        <ImageView
            android:id="@+id/imageView3Food5"
            android:layout_width="400dp"
            android:layout_height="330dp"
            android:visibility="invisible"
            android:padding="10dp"
            android:src="@drawable/beans"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp" />

    </ViewFlipper>

    <Button
        android:id="@+id/btnRightFood3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_right"
        android:layout_toRightOf="@+id/viewFlipperFood3"
        android:layout_marginVertical="270dp"/>

    <Button
        android:id="@+id/btnYT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/tVInst3"
        android:background="@null"
        android:text="Si quieres saber más beneficios de las legumbres. Da click aquí."
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonGoOut"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="150dp"
        android:layout_below="@id/btnYT"
        android:padding="25dp"
        android:backgroundTint="@color/secondaryDarkColor"
        android:text="@string/btn_goOut"
        android:textSize="30dp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnYT"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:padding="25dp"
        android:backgroundTint="@color/secondaryDarkColor"
        android:text="Atrás"
        android:textSize="30dp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnYT"
        android:layout_alignRight="@id/btnYT"
        android:layout_marginRight="150dp"
        android:layout_gravity="end"
        android:layout_marginTop="4dp"
        android:padding="25dp"
        android:backgroundTint="@color/secondaryDarkColor"
        android:text="@string/btn_next"
        android:textSize="30sp"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"/>

</RelativeLayout>