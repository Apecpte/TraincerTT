<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@color/colorPrimary"
    tools:context=".test.TestFragment1">

    <TextView
        android:id="@+id/textViewScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:text=""
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp" >

        <TextView
            android:id="@+id/textViewTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:text="To many questions?"
            android:textColor="@color/primaryTextColor"
            android:textSize="50sp"/>

        <ImageView
            android:id="@+id/imageViewTest"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/textViewTest"
            android:layout_centerHorizontal="true"
            android:src="@drawable/test_image1"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:gravity="left">

        <Button
            android:id="@+id/test_button4"
            android:layout_width="615dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/secondaryDarkColor"
            android:text=""
            android:textColor="@color/primaryTextColor"
            android:textSize="35sp" />

        <Button
            android:id="@+id/test_button3"
            android:layout_width="615dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_above="@+id/test_button4"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/secondaryDarkColor"
            android:text=""
            android:textColor="@color/primaryTextColor"
            android:textSize="35sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:gravity="right">

        <Button
            android:id="@+id/test_button2"
            android:layout_width="615dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/secondaryDarkColor"
            android:text=""
            android:textColor="@color/primaryTextColor"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/test_button1"
            android:layout_width="615dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_above="@+id/test_button2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/secondaryDarkColor"
            android:text=""
            android:textColor="@color/primaryTextColor"
            android:textSize="35sp"/>

    </RelativeLayout>

</RelativeLayout>